@model IEnumerable<NetAtlas.Models.Register>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Page administrateur";
}

<table class="table ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Rejeter" asp-route-id="@item.Id" class="btn-danger">Rejeter</a> |
                <a asp-action="Autorisation" asp-route-id="@item.Id"class="btn-success">Autoriser</a>
            </td>
        </tr>
}
    </tbody>
</table>