@model NetAtlas.Models.Register

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Autorisation";
}

<html>
        <body onload="redirection()">

        <h1 class="text-danger">Cette demande a été refuser avec succès</h1>
        @if (ViewBag.checkEnvoi){
            <div class="alert alert-success alert-dismissible col-1" role="alert" style="margin-right:0px;margin-top:0px">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
              L' email a bien été envoyé
            </div>
        }
        else
        {
            <div class="alert alert-warning alert-dismissible col-1" role="alert" style="margin-right:0px;margin-top:0px">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
              L' email n' a pas pu être envoyé
            </div>
        }

        <div >
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nom)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nom)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Prenom)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Prenom)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
        
            </dl>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
        <script>
            function f()
            {
                window.location.replace("../Index");
            }

            function redirection()
            {
                setTimeout(f,5000);
            }

    
        </script>
    </body>
</html>