    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>
<body>
    <header id="header" class="fixed-top d-flex align-items-center ">
    <div class="container d-flex justify-content-between align-items-center">

      <div class="logo">
        <h1 class="text-light"><a href="index.html"><span>Moderna</span></a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
      </div>

      <nav id="navbar" class="navbar">
        <ul>
          @*<li><a class="active"  >Acceuil</a></li>
          <li><a href="about.html">About</a></li>*@
          <li><a>Bonjour ViewBag.Membre</a></li>
          <li><a asp-controller="Membre" asp-action="RetirerAmi">Voir mes amis</a></li>
          <li class="dropdown"><a href="#"><span>Publications</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a href="#">Voir mes publications</a></li>
              <li class="dropdown"><a href="#"><span>Faire une publication</span> <i class="bi bi-chevron-right"></i></a>
                <ul>
                  @*<li><a href="#">Deep Drop Down 1</a></li>
                  <li><a href="#">Deep Drop Down 2</a></li>*@
                  <li><a asp-controller="Liens" asp-action="Create">Publier un lien</a></li>
                  <li><a asp-controller="Messages" asp-action="Create">Publier un message</a></li>
                  <li><a asp-controller="PhotoVideos" asp-action="Create">Publier un media</a></li>
                </ul>
              </li>
              <li><a asp-controller="Publication" asp-action="Index">publications de mes amis</a></li>
            </ul>
          </li>
           <li class="dropdown"><a href="#"><span>Invitations</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a asp-controller="Membre" asp-action="ListeMembre">Envoyer une invitation</a></li>
              <li><a asp-controller="Amities" asp-action="Index">Voir les invitations reçus</a></li>
              @*<li><a href="#">Voir les invitations reçus</a></li>
              <li><a href="#">Drop Down 4</a></li>*@
            </ul>
          </li>
          <li><a asp-controller="Membre" asp-action="Deconnexion">Se deconnecter</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->
    <div class="container page">
        <main role="main" class="pb-3">
            <div class="mt-5">
            @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - NetAtlas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

